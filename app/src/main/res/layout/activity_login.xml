<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".views.login.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="100dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />


    <Button
        android:id="@+id/facebookLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@id/googlePlusLogo"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@id/googlePlusLogo"
        android:background="@mipmap/facebook" />

    <Button
        android:id="@+id/googlePlusLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="150dp"
        android:background="@mipmap/google_plus" />

    <Button
        android:id="@+id/googlePlayGamesLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@id/googlePlusLogo"
        android:layout_toEndOf="@id/googlePlusLogo"
        android:layout_toRightOf="@id/googlePlusLogo"
        android:background="@mipmap/google_play_games" />


    <Button
        android:id="@+id/playAsGuestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@android:color/holo_green_dark"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/play_as_guest"
        android:textSize="20sp" />


</RelativeLayout>