<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/levelTextView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:background="@drawable/ic_star"
        android:text="1"
        android:textColor="@color/darkBlue" />

    <LinearLayout
        android:id="@+id/scoreLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profileImageView"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="13sp"
        android:layout_toEndOf="@id/profileImageView"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/score_background"
            android:layoutDirection="rtl"
            android:paddingEnd="30dp">

            <ImageView
                android:id="@+id/addCoin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="-1dp"
                android:background="@drawable/score_background"
                android:gravity="center"
                android:src="@drawable/ic_plus" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_coin" />

            <TextView
                android:id="@+id/coinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:text="1000"
                android:textColor="@color/darkBlue"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/score_background"
            android:layoutDirection="rtl"
            android:paddingEnd="30dp">

            <ImageView
                android:id="@+id/addGem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="-1dp"
                android:background="@drawable/score_background"
                android:gravity="center"
                android:src="@drawable/ic_plus" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_gem" />

            <TextView
                android:id="@+id/gemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:text="1000"
                android:textColor="@color/darkBlue"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:background="@drawable/profile_background"
        android:contentDescription="profileImageView"
        tools:ignore="HardcodedText" />

</RelativeLayout>