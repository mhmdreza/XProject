<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.market.MarketFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/homeButton"
            android:layout_width="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home" />

        <LinearLayout
            android:id="@+id/scoreLayout"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignBottom="@id/homeButton"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/homeButton"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/homeButton"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="24dp"
                android:background="@drawable/score_background"
                android:layoutDirection="rtl">

                <ImageView
                    android:id="@+id/addCoin"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="-2dp"
                    android:background="@drawable/score_background"
                    android:gravity="center"
                    android:src="@drawable/ic_plus" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_coin" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:lines="1"
                    android:paddingEnd="4dp"
                    android:text="1000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="24dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/score_background"
                android:layoutDirection="rtl">

                <ImageView
                    android:id="@+id/addGem"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="-2dp"
                    android:background="@drawable/score_background"
                    android:gravity="center"
                    android:src="@drawable/ic_plus" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_gem" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:lines="1"
                    android:paddingEnd="4dp"
                    android:text="1000"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:orientation="vertical"
            android:paddingRight="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/beige"
                        android:shadowColor="@color/darkBlue"
                        android:shadowRadius="10"
                        android:shadowDy="5"
                        android:text="AVATAR"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/profile_background"
                                android:src="@mipmap/face1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="xxx"
                                android:textColor="@color/darkBlue"
                                android:gravity="center_vertical"
                                android:drawablePadding="2dp"
                                android:drawableEnd="@drawable/ic_coin"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/profile_background"
                                android:src="@mipmap/face1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="xxx"
                                android:textColor="@color/darkBlue"
                                android:gravity="center_vertical"
                                android:drawablePadding="2dp"
                                android:drawableEnd="@drawable/ic_gem"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/profile_background"
                                android:src="@mipmap/face1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="xxx"
                                android:textColor="@color/darkBlue"
                                android:gravity="center_vertical"
                                android:drawablePadding="2dp"
                                android:drawableEnd="@drawable/ic_gem"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/profile_background"
                                android:src="@mipmap/face1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="xxx"
                                android:textColor="@color/darkBlue"
                                android:gravity="center_vertical"
                                android:drawablePadding="2dp"
                                android:drawableEnd="@drawable/ic_gem"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/profile_background"
                                android:src="@mipmap/face1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="xxx"
                                android:textColor="@color/darkBlue"
                                android:gravity="center_vertical"
                                android:drawablePadding="2dp"
                                android:drawableEnd="@drawable/ic_gem"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/beige"
                        android:text="TIME BOOSTER"
                        android:textAppearance="@style/TextAppearance.FontPath"
                        android:shadowColor="@color/darkBlue"
                        android:shadowRadius="10"
                        android:shadowDy="5"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="-8dp"
                                android:background="@drawable/profile_background"
                                android:src="@drawable/coming_soon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="xxx"
                                android:textColor="@color/darkBlue"
                                android:gravity="center_vertical"
                                android:drawablePadding="2dp"
                                android:drawableEnd="@drawable/ic_coin"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/profile_background"
                                android:src="@drawable/coming_soon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="xxx"
                                android:textColor="@color/darkBlue"
                                android:gravity="center_vertical"
                                android:drawablePadding="2dp"
                                android:drawableEnd="@drawable/ic_gem"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/profile_background"
                                android:src="@drawable/coming_soon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="xxx"
                                android:textColor="@color/darkBlue"
                                android:gravity="center_vertical"
                                android:drawablePadding="2dp"
                                android:drawableEnd="@drawable/ic_gem"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/profile_background"
                                android:src="@drawable/coming_soon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="xxx"
                                android:textColor="@color/darkBlue"
                                android:gravity="center_vertical"
                                android:drawablePadding="2dp"
                                android:drawableEnd="@drawable/ic_gem"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/profile_background"
                                android:src="@drawable/coming_soon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="xxx"
                                android:textColor="@color/darkBlue"
                                android:gravity="center_vertical"
                                android:drawablePadding="2dp"
                                android:drawableEnd="@drawable/ic_gem"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>