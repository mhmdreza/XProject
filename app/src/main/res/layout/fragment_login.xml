<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background"
    tools:context=".views.login.LoginFragment">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/instagramButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_instagram" />

            <ImageView
                android:id="@+id/facebookButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/googlePlayGamesButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_google_play_games" />

        </LinearLayout>

        <TextView
            android:id="@+id/guestLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/login_text_background"
            android:gravity="center"
            android:text="LOGIN AS GUEST"
            android:textColor="@color/beige"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/guestPlay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/login_text_background"
            android:gravity="center"
            android:text="PLAY AS GUEST"
            android:textColor="@color/beige"
            android:textSize="24sp" />
    </LinearLayout>


</RelativeLayout>