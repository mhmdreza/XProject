<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical"
    tools:context=".views.ProfileActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        android:text="@string/close"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profileImageView"
            android:background="@mipmap/person3"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:outlineSpotShadowColor="#0000"
            android:outlineAmbientShadowColor="#0000"
            android:progress="50"
            android:thumb="@drawable/ic_star"
            android:max="150"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scoresLayout"
        android:layout_width="match_parent"
        android:paddingRight="32dp"
        android:paddingLeft="32dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/divider"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/rightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/divider"
            android:layout_toRightOf="@id/divider"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="dfdsfsdfsdfsd"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gamePlayedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="dfdsfsdfsdfsd"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wonInARowTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="dfdsfsdfsdfsd"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/leftLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/divider"
            android:layout_toStartOf="@id/divider"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rankTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="dfdsfsdfsdfsd"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gamesWonView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="dfdsfsdfsdfsd"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/averageScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="dfdsfsdfsdfsd"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>