<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <View
        android:id="@+id/progressView"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@id/seekBarThumb"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:background="@color/beige"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:background="@drawable/seekbar_background" />

    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:layout_alignBottom="@id/backgroundView"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/backgroundView"
        android:layout_marginStart="40dp"
        android:textColor="@color/darkBlue"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/seekBarThumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/progressTextView"
        android:src="@drawable/ic_star" />
</RelativeLayout>